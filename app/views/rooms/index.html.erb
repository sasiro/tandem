<div class="container">
  <div class="row">
<div class="page-header">

<h2 class="featurette-heading">Rooms <span class="muted">list</span></h2>
      </div>
<div class="well well-large">
  Number of rooms created: <%= @rooms.size %>
</div>
 

  <%= will_paginate @rooms %>

    <div class="span7">



            <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Id</th>
            <th>Created</th>
            <th>Available</th>
            <th>Joined at</th>
            <th>Duration</th>
            <th>publisher id</th>
            <th>subscriber id</th>
          </tr>
        </thead>
        <% @rooms.each do |room| %>

            <tr>
              <td><%= room.id %></td>
              <td><%= room.created_at.strftime("%m-%d %H:%M")%></td>
              <td><%= room.available %></td>
              <td><%= room.joined_at.strftime("%H:%M") unless room.joined_at.nil?  %></td>
              <td><%= room.duration.strftime("%H:%M")  unless room.duration.nil?  %></td>
              <td><%=room.publisher_id  %></td>
              <td><%=  room.subscriber_id  %></td>

        </tr>
      <% end %>
  </table>
       </div>

</div>

<div class="clear">

 <%= link_to t('.back', :default => t("helpers.links.back")),
              tandem_users_path, :class => 'btn pull-left '  %>


</div>


