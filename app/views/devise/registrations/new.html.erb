<div class="container">
  <div class="row">
    <div class="span1">
    </div>
<div class="span11">

<legend>Sign up</legend>
      <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-vertical'} do |f| %>
<fieldset>
        <%= f.input :name %>
        <%= f.input :surname  %>
        <%= f.input :email %>
        <%= f.input :country, :label => "Country", :collection => ["Germany","France","United States","Spain","United Kingdom","Portugal"] %>


        <% if f.object.password_required? %>


          <%= f.input :password %>
          <%= f.input :password_confirmation %>

        <% end %>


        <div class="field">
          <%= f.label :language_speak_ids, "Languages you speak" %><br />
          <%= f.collection_select :language_speak_ids, Language.order(:name), :id, :name, {}, {multiple: true} %>
        </div>
        <br />

        <div class="field">
          <%= f.label :language_improve_ids, "Languages you want to improve" %><br />
          <%= f.collection_select :language_improve_ids, Language.order(:name), :id, :name, {}, {multiple: true} %>
        </div>
        <br />

        <div id="interests" class="field">
          <%= hidden_field_tag "user[interest_ids][]", nil %>
          <% Interest.all.each_with_index do |interest,index| %>
            <%= check_box_tag "user[interest_ids][]", interest.id, @user.interest_ids.include?(interest.id), id: dom_id(interest) %>
            <%= label_tag dom_id(interest), interest.name  %>

          <% end %>
        </div>
        <br >
        <br >
<div class="form-actions">
      <%= f.submit "Sign up" , :class => 'btn btn-large btn-primary'%>
      <% end %>
</div>
</fieldset>
    </div>
  </div>
</div>
