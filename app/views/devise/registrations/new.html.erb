<h2>Sign up</h2>

<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-vertical'} do |f| %>

  <%= f.input :email,:label => 'Name'%>
  <%= f.input :email ,:label => 'Surname'%>
  <%= f.input :email %>
  <%= f.input :country, :label => "Country", :collection => ["Germany","France","United States","Spain","United Kingdom","Portugal"] %>


  <% if f.object.password_required? %>


    <%= f.input :password %>
    <%= f.input :password_confirmation %>

  <% end %>

  <%= f.input :email ,:label => 'Calerdary'%>


  <div class="field">
    <%= f.label :language_speak_ids, "Languages you speak" %><br />
    <%= f.collection_select :language_speak_ids, Language.order(:name), :id, :name, {}, {multiple: true} %>
  </div>
<br />

  <div class="field">
    <%= f.label :language_improve_ids, "Languages you want to improve" %><br />
    <%= f.collection_select :language_improve_ids, Language.order(:name), :id, :name, {}, {multiple: true} %>
  </div>
<br />

  <div class="field"><%= f.submit "Sign up" %></div>
<% end %>
<%= render "devise/shared/links" %>
