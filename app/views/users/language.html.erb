<%- model_class = User -%>
<div class="page-header">
  <h1>Languages</h1>
</div>


<%= simple_form_for @user, :html => { :class => 'form-horizontal' }, :url => update_language_path, :method =>:put  do |f| %>
  <%= f.association :language_speak, collection: Language.order(:name), :label =>"I speak :" %>
  <%= f.association :language_improve, collection: Language.order(:name), :label =>"I am perfectioning my :"  %>

 <div class="form-actions">
   <%= f.submit "Continue", :class => 'btn btn-primary btn-xlarge'%>
  </div>
<% end %>
